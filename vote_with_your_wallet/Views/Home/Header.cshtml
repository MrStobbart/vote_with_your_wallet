@{
    ViewBag.Title = "Header";
}

<header class="masthead text-center text-white d-flex" >
    <div class="container my-auto">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <h1 class="text-uppercase">
                    Do I want to write something here?
                </h1>
                <hr>
            </div>
            <div class="col-lg-8 mx-auto">
                <p class="text-faded mb-5">Create your own cause or support other causes! </p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" data-toggle="modal" data-target="#new-cause-modal">New cause</a>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#causes">View causes</a>

            </div>
        </div>
    </div>
</header>